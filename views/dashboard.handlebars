<section class="dashboard-wrapper">
  {{#if posts.length}}
  <div class="col-md-6">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div class="row display-flex justify-space-between align-center mb-2">
      <h4><a href="/dashboard/{{post.id}}">{{post.title}}</a></h4>
      <p>{{format_date post.date_created}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <button class="btn create-post-button">Create a new blog post</button>
</section>

<script src="/js/CreatePost.js"></script>
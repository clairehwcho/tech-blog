{{#if posts.length}}
<div class="col-md-6 post-list">
  <h3>Your Posts:</h3>

  {{#each posts as |post|}}
  <div class="row display-flex justify-space-between align-center mb-2">
    <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
    <p>{{format_date post.date_created}}</p>
  </div>
  {{/each}}
</div>
{{/if}}

<a href="/post/new"><button class="btn create-btn">Create a new blog post</button></a>
